\RequirePackage{kvoptions}
\SetupKeyvalOptions {family=@biblatexphilologue@,prefix=biblatexphilologue@}
\DeclareBoolOption[false]{noautoshorthand}
\ProcessKeyvalOptions*

\ifbiblatexphilologue@noautoshorthand
	\RequirePackage[tools={realauthor,manuscripts-noautoshorthand},bibstyle=verbose]{biblatex-multiple-dm}
\else
	\RequirePackage[tools={realauthor,manuscripts},bibstyle=verbose]{biblatex-multiple-dm}
\fi
\RequirePackage[sorting=anonyme,backend=biber,indexing=false,bibstyle=multiple-dm,citestyle=verbose-trad2,singletitle=true,mincrossrefs=0,citepages=omit,useprefix=true,language=french]{biblatex}
\RequirePackage{xpatch}

\RequirePackage{biblatex-philologue/claves}				% Pour les claves
\RequirePackage{biblatex-philologue/final}				% Pour afficher correctement la bibliographie finale
\RequirePackage{biblatex-philologue/signes_typo}			% Les différents signes typo utilisées pour indiquer les élèments
%\RequirePackage{biblatex-philologue/biblatex-index}				% Pour gérer les indexations
\RequirePackage{biblatex-philologue/chaines}				% Les différentes chaînes de langues
\RequirePackage{biblatex-philologue/drivers}				% Les drivers correspondant aux différents types d'entrée @book par ex.
\RequirePackage{biblatex-philologue/morceau}				% Les différents morceaux
\RequirePackage{biblatex-philologue/biber}				% Héritage Biber
\RequirePackage{biblatex-philologue/check}
\RequirePackage{biblatex-philologue/type}				% Nouveaux types
\RequirePackage{biblatex-source-division}				% Pour gérer les divisions de sources
