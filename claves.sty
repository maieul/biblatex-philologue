\newcommand{\multiclavesseparator}{\addsemicolon\ifpunct{\addspace}{}}
\DeclareFieldFormat{addendum}{\mkbibparens{#1}}
\DeclareSourcemap{
	\maps[datatype=bibtex]{
		\map[overwrite]{
			\step[fieldsource=bhg,final]
			\step[fieldset=addendum,fieldvalue={\noexpand\multiclavesseparator BHG\space{}},append]
			\step[fieldset=addendum,origfieldval, append]
			}
		\map[overwrite]{
			\step[fieldsource=cpg,final]
			\step[fieldset=addendum,fieldvalue={\noexpand\multiclavesseparator CPG\space{}},append]
			\step[fieldset=addendum,origfieldval, append]
		}
		\map[overwrite]{
			\step[fieldsource=bhl,final]
			\step[fieldset=addendum,fieldvalue={\noexpand\multiclavesseparator BHL\space{}},append]
			\step[fieldset=addendum,origfieldval, append]
		}
		\map[overwrite]{
			\step[fieldsource=cpl,final]
			\step[fieldset=addendum,fieldvalue={\noexpand\multiclavesseparator CPL\space{}},append]
			\step[fieldset=addendum,origfieldval, append]
		}
		\map[overwrite]{
			\step[fieldsource=cant,final]
			\step[fieldset=addendum,fieldvalue={\noexpand\multiclavesseparator CANT\space{}},append]
			\step[fieldset=addendum,origfieldval, append]
		}
	}	
}